<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/idBullbasour"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:src="@drawable/bullbasour"/>

        <ImageView
            android:id="@+id/idCharizard"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:src="@drawable/charizard"
           />

        <ImageView
            android:id="@+id/idCharmander"
            android:layout_width="105dp"
            android:layout_height="210dp"
            android:src="@drawable/charmander" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:src="@drawable/incognita"/>
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs"
            android:textSize="@dimen/tamaÃ±oVS"/>
        -->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vs"/>
        <ImageView
            android:id="@+id/imgSistema"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:src="@drawable/incognita"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/botonLogin"
            android:text="@string/Jugar"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnResetear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/botonLogin"
            android:text="@string/Resetear"
            android:onClick="onClick"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idtipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:text="Tipo pokemon " />

        <TextView
            android:id="@+id/tipoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtipo"
            android:layout_marginLeft="15dp"
            android:text="---" />
<!--
        <TextView
            android:id="@+id/Ataque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipoUsuario"
            android:layout_marginLeft="15dp"
            android:text="Ataque: " />

        <TextView
            android:id="@+id/ataqueUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ataque"
            android:layout_marginLeft="15dp"
            android:text="" />

        -->


        <TextView
            android:id="@+id/tipoPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:text="Tipo pokemon " />

        <TextView
            android:id="@+id/tipoComputer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tipoPokemon"
            android:layout_marginRight="15dp"
            android:text="---" />

        <!--
        <TextView
            android:id="@+id/idAtaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tipoComputer"
            android:layout_marginRight="15dp"
            android:text="Ataque: " />

        <TextView
            android:id="@+id/ataqueComputer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/idAtaque"
            android:layout_marginRight="15dp"
            android:text="" />
            -->


    </RelativeLayout>


</LinearLayout>
